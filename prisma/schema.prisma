generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Issue {
  id String @id
  title String
  description String
  status IssueStatus
  resolution Resolution?
}

model Resolution {
  id String @id @default(uuid())
  rootCause String
  prevention String
  issue Issue @relation(fields: [issueId], references: [id])
  issueId String @unique
}

enum IssueStatus {
  open
  resolved
}